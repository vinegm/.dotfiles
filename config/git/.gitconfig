  email = 117782568+vinegm@users.noreply.github.com
  name = vine

[core]
  pager = delta
  editor = nvim
  compression = 9
  whitespace = error
  preloadindex = true

[init]
  defaultBranch = main

[status]
  branch = true
  showStash = true

[delta]
  dark = true
  navigate = true
  side-by-side = true
  syntax-theme = tokyonight_night

[push]
  default = simple
  autoSetupRemote = true

[pull]
  rebase = true

[rebase]
  autoStash = true

[rerere]
  enabled = true
