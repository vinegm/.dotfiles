[global]
font = "JetBrains Mono Nerd Font 10"
enable_recursive_icon_lookup = true

# allows markup in the formatting
markup = full

# possible variables:
# %a  appname
# %s  summary
# %b  body
# %i  iconname (including its path)
# %I  iconname (without its path)
# %p  progress value if set ([  0%] to [100%]) or nothing
format = "<b>%s</b>\n%b"
corner_radius = 8

# show how many messages are currently hidden
indicate_hidden = yes

# show age of message
show_age_threshold = 30

# split notifications into multiple
# lines if they don't fit into geometry
word_wrap = yes

# hide duplicate's count and stack them
stack_duplicates = true

origin = top-right
offset = 25x50
width = (0,500)

# don't remove messages, if the user is idle
idle_threshold = 60

# display notification on focused monitor
follow = keyboard

mouse_left_click = do_action
mouse_right_click = close_all

# should a notification popped up from history be sticky or timeout
# as if it would normally do
sticky_history = yes

# maximum amount of notifications kept in history
history_length = 10

# display indicators for URLs (U) and actions (A)
show_indicators = no

# draw a line between notifications
separator_height = 2

# padding between text and separator
padding = 15

# horizontal padding
horizontal_padding = 15

# define a color for the separator
separator_color = auto

# print a notification on startup
startup_notification = true

# align icons
icon_position = left
max_icon_size = 48

# border width
frame_width = 2

[urgency_low]
frame_color = "#7DCFFF"
foreground = "#C0CAF5"
background = "#1A1B26"
timeout = 10

[urgency_normal]
frame_color = "#7DCFFF"
foreground = "#C0CAF5"
background = "#1A1B26"
timeout = 10

[urgency_critical]
frame_color = "#7DCFFF"
foreground = "#C0CAF5"
background = "#1A1B26"
timeout = 120

[notify_send]
appname = notify-send
new_icon = bell

[wireless]
appname = wireless
new_icon = network-card
format = "<span font_desc='JetBrainsMono Medium Nerd Font'>%b</span>"

